public class Solution { public static int totalSalary(int basic, char grade) {  //Write your code here        double hra = (basic * 0.2);        double da = (basic * 0.5);        double pf = (basic * 0.11);        double allowance;        if(grade == 'A'){                       allowance = 1700;        }        else if(grade == 'B'){            allowance = 1500;        }        else {                        allowance = 1300;        }        int TotalAmount = (int)Math.round(basic + hra + da + (allowance - pf));        return TotalAmount ;                } }  
