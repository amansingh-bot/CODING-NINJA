import java.util.* ;
import java.io.*; 
public class Solution {

    public static boolean perfectNumber(int n) {

        // Write your code here.

        if (n == 1)

            return false;

        int sum = 1;

        for (int i = 2; i < n; i++) {

 

            if (n % i == 0) {

                sum += i;

            }

        }

        if (sum == n)

            return true;

 

        return false;

    }
}
