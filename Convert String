import java.util.* ;
import java.io.*; 
public class Solution{
	public static String convertString(String str) {
            // Write your code here
        String s="";
        for(int i=0;i<str.length();i++){
          char c=str.charAt(i);
          if(i==0 || str.charAt(i-1)==' '){
            c=Character.toUpperCase(c);
          }
          s+=c;
        }
        return s;
    }

}
